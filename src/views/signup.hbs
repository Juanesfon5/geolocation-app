<div class="row">
    <div class="col-md-5 mx-auto">
        <div class="card">
            <div class="card-header">
                Register
            </div>
            <div class="card-body">
                <form action="/signup" method = "POST">
                    <div class="from-group">
                        <input type="text" 
                        class = "form-control"
                        name = "name"
                        placeholder="Name">
                    </div>
                    <div class="from-group">
                        <input type="text" 
                        class = "form-control"
                        name = "password"
                        placeholder="Password">
                    </div>
                    <div class="form-group">
                        <button type = "submit"
                        class = "btn btn-primary">
                            Sign up
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>